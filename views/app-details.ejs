<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= app.name %> - AppZorix</title>
    <link id="favicon" rel="icon" type="image/png" href="<%= app.imageUrl %>">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    
    <style>
        /* Global Styles */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            text-align: center;
            background: #0d1117;
            color: white;
            transition: background 0.3s ease, color 0.3s ease;
        }

        .light-theme {
            background: #ffffff;
            color: black;
        }

        /* Logo */
        .logo-container {
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.1);
            padding: 15px;
            border-radius: 10px;
            width: fit-content;
            margin: 20px auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }
        .logo-container img {
            width: 50px;
            height: 50px;
            margin-right: 10px;
        }
        .logo-container h2 {
            font-size: 24px;
            font-weight: bold;
            color: inherit;
        }

        /* App Details */
        .container {
            width: 90%;
            max-width: 500px;
            padding: 25px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            text-align: center;
            margin: 20px auto;
        }

        .app-icon {
            width: 100px;
            height: 100px;
            border-radius: 20px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        }

        .app-title {
            font-size: 22px;
            font-weight: bold;
            margin: 10px 0;
        }

        .app-description {
            font-size: 16px;
            margin-bottom: 20px;
        }

        /* Buttons */
        .btn {
            display: inline-block;
            padding: 12px 25px;
            font-size: 16px;
            font-weight: 500;
            color: white;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            text-decoration: none;
            transition: 0.3s;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            margin: 10px;
        }

        .download-btn { background: #4CAF50; }
        .download-btn:hover { background: #45a049; }

        .back-btn { background: #007bff; }
        .back-btn:hover { background: #0056b3; }

        .share-btn { background: #ff9800; }
        .share-btn:hover { background: #e68900; }

        .theme-toggle {
            position: fixed;
            top: 15px;
            right: 15px;
            background: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 50px;
            font-size: 18px;
            font-weight: bold;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            transition: transform 0.2s ease;
        }
        .theme-toggle:hover { transform: scale(1.1); }

        /* Suggested Apps */
        .suggestions {
            margin-top: 20px;
            padding: 15px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.1);
            text-align: center;
        }

        .suggestions h3 {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .suggested-apps {
            display: flex;
            justify-content: center;
            gap: 15px;
            flex-wrap: wrap;
        }

        .suggested-app {
            width: 120px;
            padding: 10px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.2);
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .suggested-app:hover { transform: scale(1.05); }

        .suggested-app img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        }

        .suggested-app span {
            display: block;
            margin-top: 5px;
            font-size: 14px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <!-- Logo -->
    <div class="logo-container">
        <img id="logo-img" src="https://i.ibb.co/DD0spV8M/extracted-white-icon-1.png" alt="AppZorix">
        <h2 id="logo-text">AppZorix</h2>
    </div>

    <!-- App Details -->
    <div class="container">
        <img class="app-icon" src="<%= app.imageUrl %>" alt="<%= app.name %>">
        <div class="app-title"><%= app.name %></div>
        <div class="app-description"><%= app.description %></div>

          <a href="<%= app.downloadUrl %>" class="btn download-btn" target="_blank">Download</a>
        <button class="btn share-btn" onclick="shareApp()">Share</button>
        <button class="btn back-btn" onclick="history.back()">Back</button>
    </div>

    <!-- Suggested Apps -->
    <div class="suggestions">
        <h3>You may also like</h3>
        <div class="suggested-apps">
            <% if (suggestedApps && suggestedApps.length > 0) { %>
                <% suggestedApps.forEach(suggested => { %>
                    <div class="suggested-app" onclick="location.href='/app/<%= suggested._id %>'">
                        <img src="<%= suggested.imageUrl %>" alt="<%= suggested.name %>" loading="lazy">
                        <span><%= suggested.name %></span>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No suggested apps available.</p>
            <% } %>
        </div>
    </div>

    <button class="theme-toggle" onclick="toggleTheme()">üåô</button>

    <script>
        function shareApp() {
                 const appUrl = window.location.href;
            if (navigator.share) {
                navigator.share({
                    title: "<%= app.name %>",
                    text: "Check out this amazing app on AppZorix!",
                    url: appUrl
                }).catch(err => console.log('Sharing failed', err));
            } else {
                prompt("Copy this link and share:", appUrl);
            }
        }

          function toggleTheme() {
            const body = document.body;
            const isLight = body.classList.toggle("light-theme");
            document.getElementById("logo-img").src = isLight 
                ? "https://i.ibb.co/g1Fcs7b/20250319-223229.png"
                : "https://i.ibb.co/DD0spV8M/extracted-white-icon-1.png";
            localStorage.setItem("theme", isLight ? "light" : "dark");
            document.querySelector(".theme-toggle").textContent = isLight ? "‚òÄÔ∏è" : "üåô";
        }

        window.onload = function() {
            const savedTheme = localStorage.getItem("theme");
            if (savedTheme === "light") {
                document.body.classList.add("light-theme");
                document.getElementById("logo-img").src = "https://i.ibb.co/g1Fcs7b/20250319-223229.png";
                document.querySelector(".theme-toggle").textContent = "‚òÄÔ∏è";
            }
        };
    </script>

</body>
</html>
