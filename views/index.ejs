<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AppZorix - App Store</title>
    <link rel="icon" href="https://i.ibb.co/9m29bBsr/extracted-white-icon-1-removebg-preview.png" type="image/png">
    
    <!-- Google Font (Poppins) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        /* Global Styles */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            text-align: center;
            background: #0d1117;
            color: white;
            transition: background 0.3s ease, color 0.3s ease;
        }

        /* Theme Toggle */
        .theme-toggle {
            position: fixed;
            top: 15px;
            right: 15px;
            background: #ffcc00;
            color: black;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
        }

        /* Drawer Styles */
        .menu-btn {
            position: fixed;
            top: 15px;
            left: 15px;
            background: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 18px;
            z-index: 1001;
        }

        .drawer {
            position: fixed;
            top: 0;
            left: -260px;
            width: 260px;
            height: 100vh;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            transition: left 0.3s ease-in-out;
            z-index: 1000;
            border-radius: 0 10px 10px 0;
        }

        .drawer a {
            color: white;
            text-decoration: none;
            font-size: 20px;
            margin: 10px 0;
            font-weight: bold;
        }
        .drawer a:hover {
            text-decoration: underline;
        }

        .close-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            background: red;
            color: white;
            padding: 8px;
            cursor: pointer;
            border-radius: 5px;
        }

        /* Logo */
        .logo-container {
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 15px;
            border-radius: 10px;
            width: fit-content;
            margin: 20px auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .logo-container img {
            width: 50px;
            height: 50px;
        }

        .logo-container h2 {
            color: white;
            margin: 0;
            font-size: 24px;
            font-weight: bold;
        }

        /* Search Bar */
        .search-bar {
            margin: 20px auto;
            max-width: 400px;
        }
        .search-bar input {
            padding: 12px;
            width: 70%;
            border: none;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            color: white;
        }
        .search-bar button {
            padding: 12px;
            border: none;
            background: #007bff;
            color: white;
            cursor: pointer;
            border-radius: 8px;
        }

        /* App List */
        .app-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
        }
        .app-card {
            width: 170px;
            margin: 10px;
            padding: 10px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            cursor: pointer;
            transition: transform 0.2s;
        }
        .app-card:hover {
            transform: scale(1.05);
        }
        .app-card img {
            width: 100%;
            border-radius: 8px;
        }

        /* Floating Donation Button */
        .donation-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: #ffcc00;
            color: black;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
        }

        /* Footer */
        .footer {
            margin-top: 30px;
            padding: 10px;
            background: rgba(0, 0, 0, 0.5);
            color: white;
            font-size: 16px;
            border-radius: 10px;
        }
        .footer a {
            color: #ffcc00;
            text-decoration: none;
            font-weight: bold;
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <!-- Menu Button -->
    <button class="menu-btn" onclick="openDrawer()">â˜°</button>

    <!-- Theme Toggle -->
    <button class="theme-toggle" onclick="toggleTheme()">ðŸŒ™</button>

    <!-- Drawer -->
    <div id="drawer" class="drawer">
        <button class="close-btn" onclick="closeDrawer()">âœ–</button>
        <a href="https://appzorix-apk-upload.onrender.com" target="_blank">Upload Your Apk</a>
        <a href="https://www.instagram.com/aj_applications/" target="_blank">Instagram</a>
    </div>

    <!-- Logo -->
    <div class="logo-container">
        <img src="https://i.ibb.co/DD0spV8M/extracted-white-icon-1.png" alt="AppZorix Logo">
        <h2>AppZorix</h2>
    </div>

    <!-- Search Bar -->
    <div class="search-bar">
        <form action="/" method="GET">
            <input type="text" name="search" placeholder="Search apps..." value="<%= searchQuery || '' %>">
            <button type="submit">Search</button>
        </form>
    </div>

    <!-- App List -->
    <div class="app-list">
        <% apps.forEach(app => { %>
            <div class="app-card" onclick="window.location.href='/app/<%= app._id %>'">
                <img src="<%= app.imageUrl %>" alt="<%= app.name %>">
                <h3><%= app.name %></h3>
            </div>
        <% }); %>
    </div>

    <!-- Floating Donation Button -->
    <a href="#" class="donation-button">ðŸ’° Support Us</a>

    <script>
        function openDrawer() { document.getElementById("drawer").style.left = "0"; }
        function closeDrawer() { document.getElementById("drawer").style.left = "-260px"; }
        function toggleTheme() { document.body.classList.toggle('light-theme'); }
    </script>
</body>
</html>
