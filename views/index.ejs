<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AppZorix - App Store</title>
    <link rel="icon" href="https://i.ibb.co/9m29bBsr/extracted-white-icon-1-removebg-preview.png" type="image/png">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        /* Global Styles */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            text-align: center;
            background: #0d1117;
            color: white;
            transition: background 0.3s ease, color 0.3s ease;
        }

        /* Theme Toggle */
        .theme-toggle {
            position: fixed;
            top: 15px;
            right: 15px;
            background: #007bff;
            color: black;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 50px;
            font-size: 18px;
            font-weight: bold;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            transition: transform 0.2s ease;
        }
        .theme-toggle:hover {
            transform: scale(1.1);
        }

        /* Drawer Styles */
        .menu-btn {
            position: fixed;
            top: 15px;
            left: 15px;
            background: #007bff;
            color: white;
            padding: 12px 18px;
            border: none;
            cursor: pointer;
            border-radius: 50px;
            font-size: 18px;
            z-index: 1001;
            transition: transform 0.2s ease;
        }
        .menu-btn:hover {
            transform: scale(1.1);
        }

        .drawer {
            position: fixed;
            top: 0;
            left: -270px;
            width: 270px;
            height: 100vh;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 80px;
            transition: left 0.3s ease-in-out;
            z-index: 1000;
            border-radius: 0 10px 10px 0;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.2);
        }
        .drawer a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            margin: 15px 0;
            font-weight: bold;
            transition: 0.3s;
        }
        .drawer a:hover {
            color: #ffcc00;
        }
        .close-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            background: red;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            border-radius: 50px;
        }

        /* Logo */
        .logo-container {
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.1);
            padding: 15px;
            border-radius: 10px;
            width: fit-content;
            margin: 20px auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }
        .logo-container img {
            width: 50px;
            height: 50px;
            margin-right: 10px;
        }
        .logo-container h2 {
            color: white;
            font-size: 24px;
            font-weight: bold;
        }

        /* Search Bar */
        .search-bar {
            margin: 20px auto;
            max-width: 400px;
        }
        .search-bar input {
            padding: 12px;
            width: 75%;
            border: none;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            color: white;
            font-size: 16px;
        }
        .search-bar button {
            padding: 12px;
            border: none;
            background: #007bff;
            color: white;
            cursor: pointer;
            border-radius: 8px;
            font-size: 16px;
        }

        /* App List */
        .app-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
        }
        .app-card {
            width: 180px;
            margin: 15px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            cursor: pointer;
            transition: transform 0.3s ease-in-out;
        }
        .app-card:hover {
            transform: scale(1.08);
        }
        .app-card img {
            width: 100%;
            border-radius: 10px;
        }

        /* Floating Donation Button */
        .donation-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: #ffcc00;
            color: black;
            padding: 12px 20px;
            text-decoration: none;
            border-radius: 50px;
            font-weight: bold;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            transition: transform 0.2s ease;
        }
        .donation-button:hover {
            transform: scale(1.1);
        }

        /* Footer */
        .footer {
            margin-top: 30px;
            padding: 15px;
            background: rgba(0, 0, 0, 0.5);
            color: white;
            font-size: 16px;
            border-radius: 10px;
        }
        .footer a {
            color: #ffcc00;
            text-decoration: none;
            font-weight: bold;
        }
    /* Light Theme Styles */
    .light-theme {
        background: #ffffff;
        color: black;
    }

    .light-theme .drawer {
        background: rgba(0, 0, 0, 0.1);
    }

    .light-theme .search-bar input {
        background: rgba(0, 0, 0, 0.1);
        color: black;
    }

    .light-theme .menu-btn {
        background: #0056b3;
    }

    .light-theme .theme-toggle {
        background: #222;
        color: white;
    }
    </style>
</head>
<body>

    <!-- Menu Button -->
    <button class="menu-btn" onclick="openDrawer()">‚ò∞</button>

    <!-- Theme Toggle -->
    <button class="theme-toggle" onclick="toggleTheme()">üåô</button>

    <!-- Drawer -->
    <div id="drawer" class="drawer">
        <button class="close-btn" onclick="closeDrawer()">‚úñ</button>
        <a href="https://appzorix-apk-upload.onrender.com" target="_blank">Upload Your Apk</a>
        <a href="https://www.instagram.com/aj_applications/" target="_blank">Instagram</a>
    </div>

    <!-- Logo -->
    <div class="logo-container">
        <img src="https://i.ibb.co/DD0spV8M/extracted-white-icon-1.png" alt="AppZorix Logo">
        <h2>AppZorix</h2>
    </div>

    <!-- Search Bar -->
    <div class="search-bar">
        <form action="/" method="GET">
            <input type="text" name="search" placeholder="Search apps..." value="<%= searchQuery || '' %>">
            <button type="submit">Search</button>
        </form>
    </div>

    <!-- App List -->
    <div class="app-list">
        <% apps.forEach(app => { %>
            <div class="app-card" onclick="window.location.href='/app/<%= app._id %>'">
                <img src="<%= app.imageUrl %>" alt="<%= app.name %>">
                <h3><%= app.name %></h3>
            </div>
        <% }); %>
    </div>

    <!-- Floating Donation Button -->
    <a href="#" class="donation-button">üí∞ Support Us</a>

    <script>
    function openDrawer() {
        document.getElementById("drawer").style.left = "0";
        document.querySelector(".menu-btn").style.display = "none"; // Hide menu button
    }

    function closeDrawer() {
        document.getElementById("drawer").style.left = "-270px";
        document.querySelector(".menu-btn").style.display = "block"; // Show menu button
    }
function toggleTheme() {
        const body = document.body;
        const isLight = body.classList.toggle("light-theme");

        // Save user preference in local storage
        localStorage.setItem("theme", isLight ? "light" : "dark");

        // Change button emoji dynamically
        document.querySelector(".theme-toggle").textContent = isLight ? "‚òÄÔ∏è" : "üåô";
    }

    // Apply saved theme on page load
    window.onload = function() {
        const savedTheme = localStorage.getItem("theme");
        if (savedTheme === "light") {
            document.body.classList.add("light-theme");
            document.querySelector(".theme-toggle").textContent = "‚òÄÔ∏è";
        }
    };
</script>


</body>
</html>
