<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AppZorix - App Store</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .search-bar {
            margin: 20px auto;
            text-align: center;
        }
        .app-list {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
        }
        .app-card {
            border: 1px solid #ddd;
            padding: 10px;
            width: 150px;
            text-align: center;
            background-color: #f9f9f9;
            border-radius: 10px;
        }
        .app-card img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <div class="search-bar">
        <form action="/" method="GET">
            <input type="text" name="search" placeholder="Search apps..." value="<%= searchQuery || '' %>">
            <button type="submit">Search</button>
        </form>
    </div>

    <div class="app-list">
        <% apps.forEach(app => { %>
            <div class="app-card">
                <a href="/app/<%= app._id %>">
                    <img src="<%= app.imageUrl %>" alt="<%= app.name %>">
                    <h3><%= app.name %></h3>
                </a>
            </div>
        <% }); %>
    </div>

</body>
</html>
