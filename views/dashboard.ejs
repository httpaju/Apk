<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="icon" type="image/x-icon" href="https://i.ibb.co/RXSb9zb/extracted-white-icon.png">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f3f4f6;
            margin: 0;
            display: flex;
            height: 100vh;
            overflow-x: hidden;
        }
        aside {
            width: 250px;
            background-color: #1e3a8a;
            color: white;
            padding: 20px;
            position: fixed;
            height: 100vh;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }
        .menu-toggle {
            display: block;
            font-size: 24px;
            background: none;
            border: none;
            color: white;
            cursor: pointer;
        }
        aside h2 {
            font-size: 1.5rem;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        aside ul {
            list-style: none;
            padding: 0;
        }
        aside ul li {
            margin-bottom: 15px;
        }
        aside ul li a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px;
            border-radius: 5px;
            transition: background 0.3s;
        }
        aside ul li a:hover {
            background: #2563eb;
        }
        main {
            flex: 1;
            padding: 40px;
            margin-left: 250px;
            transition: margin-left 0.3s ease-in-out;
        }
        h1 {
            font-size: 2rem;
            margin-bottom: 20px;
        }
        .form-container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            transition: transform 0.3s ease-in-out;
        }
        input, button {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        button {
            background-color: #2563eb;
            color: white;
            border: none;
            cursor: pointer;
            transition: background 0.3s;
        }
        button:hover {
            background-color: #1e40af;
        }
        table {
            width: 100%;
            background: white;
            border-collapse: collapse;
            margin-top: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
        table th, table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        table th {
            background-color: #2563eb;
            color: white;
        }
        table tr:hover {
            background-color: #f1f5f9;
        }

        @media (max-width: 768px) {
            aside {
                transform: translateX(-100%);
            }
            .sidebar-open aside {
                transform: translateX(0);
            }
            main {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <aside id="sidebar">
        <h2>Admin Dashboard <button class="menu-toggle" onclick="toggleMenu()">&#9776;</button></h2>
        <ul>
            <li><a href="/">Dashboard</a></li>
        </ul>
    </aside>
    <main>
        <h1>Add a New App</h1>
        <div class="form-container">
            <form action="/admin/add" method="POST">
                <input type="text" name="name" placeholder="App Name" required>
                <input type="text" name="description" placeholder="Description" required>
                <input type="text" name="imageUrl" placeholder="Image URL" required>
                <input type="text" name="downloadUrl" placeholder="Download URL" required>
                <button type="submit">Add App</button>
            </form>
        </div>
<table>
  <tr>
    <th>App Name</th>
    <th>Download URL</th>
    <th>Actions</th>
  </tr>
  <% if (apps.length > 0) { %>
  <% apps.forEach(app => { %>
    <tr>
      <td><%= app.name %></td>
      <td><%= app.downloadUrl %></td>
      <td>
        <a href="/admin/edit/<%= app._id %>">Edit</a> | 
        <a href="/admin/delete/<%= app._id %>" onclick="return confirm('Are you sure?')">Delete</a>
      </td>
    </tr>
  <% }); %>
<% } else { %>
  <tr>
    <td colspan="3">No apps available</td>
  </tr>
<% } %>
</table>
    </main>
    <script>
        function toggleMenu() {
            document.body.classList.toggle("sidebar-open");
        }
    </script>
</body>
</html>
